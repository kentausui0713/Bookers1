<h1>Editing Book</h1>

<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
 <div class = "field">
  <label>Title</label>
  <%= f.text_field :title %>
 </div>
 <div class = "field">
  <label>Body</label>
  <%= f.text_area :body %>
 </div>
 <div class = "actions">
  <%= f.submit 'Update Book'%>
 </div>

 <%= link_to 'Show', "/books/#{@book.id}" %>
 |
 <%= link_to 'back', "/books" %>
<% end %>
