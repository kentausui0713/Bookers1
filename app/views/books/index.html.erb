<h1>Books</h1>

<!--リスト-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <!--colspanはテーブルの結合(3つ分の結合をしてる)-->
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |f| %>
  <tbody>
    <tr>
      <td><%= f.title %></td>
      <td><%= f.body %></td>
      <td><%= link_to 'Show', "/books/#{f.id}" %></td>
      <td><%= link_to 'Edit', "/books/#{f.id}/edit" %></td>
      <td><%= link_to 'Destroy', "/books/#{f.id}", method: :delete, "data-confirm" => "Are You Sure?" %></td>
  <% end %>
    </tr>
  </tbody>
</table>

<!--新規作成部分-->
<% if@bookc.errors.any? %>
 <%= @bookc.errors.count %> errors prohibited this book from being saved: %>
  <% @bookc.errors.full_messages.each do |message| %>
   <%= message %>
 <% end %>
<% end %>

<h2>NEW BOOK</h2>
<%= form_with model: @book,url:'/books', local:true do |f| %>
 <div class = "field">
  <label>Title</label>
  <%= f.text_field :title %>
 </div>
 <div class = "field">
  <label>Body</label>
  <%= f.text_area :body %>
 </div>
 <div class = "actions">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>


