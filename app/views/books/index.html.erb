<h1>Books</h1>

<!--リスト-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <!--colspanはテーブルの結合(3つ分の結合をしてる)-->
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |f| %>
  <tbody>
    <tr>
      <td><%= f.title %></td>
      <td><%= f.body %></td>
      <!--ここから下はほんとはlink_to使う-->
      <td>show</td>
      <td>Edit</td>
      <td>Destroy</td>
      <!--ここまで-->
  <% end %>
    </tr>
  </tbody>
</table>

<!--新規作成部分-->
<h2>NEW BOOK</h2>
<%= form_with model: @book,url:'/books', local:true do |f| %>
 <div class = "field">
  <label>Title</label>
  <%= f.text_field :title %>
 </div>
 <div class = "field">
  <label>Body</label>
  <%= f.text_area :body %>
 </div>
 <div class = "actions">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>


